<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:id="@+id/fragment_report_llmain"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:padding="20dp">
    <TextView
        android:id="@+id/fragment_report_tv_yesterdayvisit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoLink="phone"
        android:ellipsize="none"
        android:textColor="@color/text_white"
        android:textColorLink="#000080"
        android:textSize="22sp"
        android:text="Yesterday Visit :- "
        android:textStyle="bold" />

    <TextView
        android:id="@+id/fragment_report_tv_yesterdayvisitcount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoLink="phone"
        android:ellipsize="none"
        android:textColor="@color/text_white"
        android:textColorLink="#000080"
        android:textSize="22sp"
        android:text="10"
        android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp">
        <TextView
            android:id="@+id/fragment_report_tv_totalvisit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="phone"
            android:ellipsize="none"
            android:textColor="@color/text_white"
            android:textColorLink="#000080"
            android:textSize="22sp"
            android:text="Yesterday Visit :- "
            android:textStyle="bold" />

        <TextView
            android:id="@+id/fragment_report_tv_totalvisitcount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="phone"
            android:ellipsize="none"
            android:textColor="@color/text_white"
            android:textColorLink="#000080"
            android:textSize="22sp"
            android:text="10"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>
    <ProgressBar
        android:id="@+id/fragment_report_pb_load"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"/>
</FrameLayout>